# Database Configuration
DB_USER=your_user
DB_PASSWORD=your_password
DB_HOST=oracle-db
DB_PORT=1521
DB_SERVICE=XEPDB1
DATABASE_URL=oracle+cx_oracle://your_user:your_password@oracle21c:1521/XEPDB1

# JWT Secret
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Oracle Database Admin Password
ORACLE_PWD=YourSecurePassword123

# Application Settings
DEBUG=True
LOG_LEVEL=INFO

# 카카오 로그인
KAKAO_REST_API_KEY=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URI=http://localhost:8000/app/login/kakao/callback

# 파일 업로드 경로 설정 (NEW)
UPLOAD_DIR=/mnt/user-data/uploads          # 실제 저장 경로 (Docker Volume)
UPLOAD_WEB_PATH=/uploads                    # 웹 접근 경로
MAX_FILE_SIZE=10485760                      # 10MB (bytes)
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp    # 허용 확장자

# 정적 파일 경로
STATIC_DIR=/app/static
STATIC_WEB_PATH=/static

# jinja2 templates 경로
TEMPLATE_DIR=/app/templates

# middleware CORS origins
#CORS_ORIGINS=["http://localhost:3000", "http://localhost:8880"]
